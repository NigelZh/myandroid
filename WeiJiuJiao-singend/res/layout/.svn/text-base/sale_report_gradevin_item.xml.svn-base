<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/all_list_item_bg"
    android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/contactitem_select_cb"
            style="@style/sale_report_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:clickable="false"
            android:focusable="false"
            android:visibility="visible"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/contactitem_picture"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip" 
            android:background="@drawable/jiugui_default"           
            android:layout_gravity="center_vertical" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >

            <TextView
                android:id="@+id/report_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="我的智能酒柜"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/report_list_item_name"
                android:layout_marginLeft="10dp"                
                android:text="编号"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/report_list_item_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_name"
                android:layout_below="@+id/report_list_item_name" 
                android:text="TPL00000000000001"            
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="10dp"
                android:text="规格"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/report_list_item_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_type"
                android:layout_below="@+id/tv_name"           
                android:text="60瓶"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/report_list_item_size"
                android:layout_below="@+id/tv_name"           
                android:text="当前容量"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/report_list_item_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_current"
                android:layout_below="@+id/tv_name"
                android:singleLine="true"
                android:text="40瓶"
                android:textSize="14sp" />
        </RelativeLayout>


</LinearLayout>