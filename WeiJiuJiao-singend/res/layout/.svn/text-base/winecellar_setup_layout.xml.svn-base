<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp" >

        <TextView
            android:id="@+id/tv_winecellar_manager_setup_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="室内温度设定"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/img_btn_winecellar_manager_setup_t_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="15dp"
          
            android:background="@drawable/img_btn_add_up" />

        <ImageButton
            android:id="@+id/img_btn_winecellar_manager_setup_t_reduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/img_btn_winecellar_manager_setup_t_add"
            android:background="@drawable/img_btn_reduce_up" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFAFA" >

        <AbsoluteLayout
            android:id="@+id/absTLAYOUT_winecellar_manager_setup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_winecellar_manager_setup_temp_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red" />
        </AbsoluteLayout>

        <SeekBar
            android:id="@+id/seekbar_winecellar_manager_setup_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/absTLAYOUT_winecellar_manager_setup"
            android:max="30"
            android:maxHeight="4dp"
            android:minHeight="4dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:progress="20"
            android:progressDrawable="@drawable/bg_winecellar_manager_setup_bar"
            android:thumb="@drawable/thumb_winecellar_manager_setup_bar" />

        <TextView
            android:id="@+id/tv_min_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekbar_winecellar_manager_setup_temp"
            android:layout_marginLeft="15dp"
            android:text="0" />

        <TextView
            android:id="@+id/tv_winecellar_manager_setup_max_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/seekbar_winecellar_manager_setup_temp"
            android:layout_marginRight="15dp"
            android:text="30°C" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp" >

        <TextView
            android:id="@+id/tv_winecellar_manager_setup_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="室内湿度设定"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/img_btn_winecellar_manager_setup_h_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
          android:padding="15dp"
            android:background="@drawable/img_btn_add_up" />

        <ImageButton
            android:id="@+id/img_btn_winecellar_manager_setup_h_reduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/img_btn_winecellar_manager_setup_h_add"
            android:background="@drawable/img_btn_reduce_up" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFAFA" >

        <AbsoluteLayout
            android:id="@+id/absHLAYOUT_winecellar_manager_setup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_winecellar_manager_setup_humidity_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red" />
        </AbsoluteLayout>

        <SeekBar
            android:id="@+id/seekbar_winecellar_manager_setup_humidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/absHLAYOUT_winecellar_manager_setup"
            android:max="95"
            android:maxHeight="4dp"
            android:minHeight="4dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:progressDrawable="@drawable/bg_winecellar_manager_setup_bar"
            android:thumb="@drawable/thumb_winecellar_manager_setup_bar" />

        <TextView
            android:id="@+id/tv_winecellar_manager_setup_min_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekbar_winecellar_manager_setup_humidity"
            android:layout_marginLeft="15dp"
            android:text="0" />

        <TextView
            android:id="@+id/tv_winecellar_manager_setup_max_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/seekbar_winecellar_manager_setup_humidity"
            android:layout_marginRight="15dp"
            android:text="95%" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_winecellar_manager_setup_password"        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#FFFAFA"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="20dp" >

        <TextView
            android:id="@+id/tv_winecellar_manager_setup_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:text="密码修改"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/img_btn_winecellar_manager_setup_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/img_btn_arrow" />
    </RelativeLayout>

</LinearLayout>