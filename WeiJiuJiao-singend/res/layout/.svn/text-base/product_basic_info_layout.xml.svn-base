<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:paddingLeft="15dp"
            android:layout_marginLeft="10dp"
            android:text="基本资料"
            android:textColor="@color/gary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/input_bg"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/product_basicInfo_image"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/wine_default_icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/product_basicInfo_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_basicInfo_name_en_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp" >

                    <TextView
                        android:id="@+id/tv_product_basic_infor_title_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="年份:"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_product_basic_infor_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_product_basic_infor_title_year"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_product_basic_infor_title_producing_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/tv_product_basic_infor_year"
                        android:text="产区/产地:"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_product_basic_infor_producing_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_product_basic_infor_year"
                        android:layout_toRightOf="@+id/tv_product_basic_infor_title_producing_area"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_product_basic_infor_title_chateau"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/tv_product_basic_infor_producing_area"
                        android:text="酒庄："
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_product_basic_infor_chateau"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_product_basic_infor_producing_area"
                        android:layout_toRightOf="@+id/tv_product_basic_infor_title_chateau"
                        android:text=""
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_product_basic_infor_title_alcoholic_strength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/tv_product_basic_infor_chateau"
                        android:text="酒精度："
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_product_basic_infor_alcoholic_strength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_product_basic_infor_chateau"
                        android:layout_toRightOf="@+id/tv_product_basic_infor_title_alcoholic_strength"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_product_basic_infor_title_assortment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/tv_product_basic_infor_alcoholic_strength"
                        android:text="葡萄品种："
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_product_basic_infor_assortment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_product_basic_infor_alcoholic_strength"
                        android:layout_toRightOf="@+id/tv_product_basic_infor_title_assortment"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_product_basic_infor_title_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/tv_product_basic_infor_assortment"
                        android:text="含量："
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_product_basic_infor_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_product_basic_infor_assortment"
                        android:layout_toRightOf="@+id/tv_product_basic_infor_title_content"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:paddingLeft="15dp"
            android:layout_marginLeft="10dp"
            android:text="追溯信息"
            android:textColor="@color/gary" />

        <LinearLayout
            android:id="@+id/ll_product_basic_infor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"            
            android:layout_marginBottom="10dp"
            android:background="@drawable/input_bg"
            android:padding="10dp"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</ScrollView>