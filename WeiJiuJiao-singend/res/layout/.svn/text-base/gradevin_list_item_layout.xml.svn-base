<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:weightSum="1.0" 
    android:background="@drawable/all_list_item_bg">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center" >

        <ImageView
            android:id="@+id/gradevin_list_item_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:padding="5dp" >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/gardevin_list_item_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的智能酒柜"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:orientation="horizontal">
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="编号:"
                android:textSize="12sp"
                android:textColor="@color/gary"/>
              <TextView 
                  android:id="@+id/gardevin_list_item_id_tv"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="TPL000005"
                android:textSize="12sp"
                android:textColor="@color/gary"/>
        </LinearLayout>
         <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingBottom="5dp"
            android:orientation="horizontal">
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="规格:"
                android:textSize="12sp"
                android:textColor="@color/gary"/>
              <TextView
                  android:id="@+id/gardevin_list_item_size_tv"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="88瓶"
                android:textSize="12sp"
                android:textColor="@color/gary"/>
                 <TextView 
                     android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="当前存量:"
                android:textSize="12sp"
                android:textColor="@color/gary"/>
              <TextView 
                  android:id="@+id/gardevin_list_item_stock_tv"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="86瓶"
                android:textSize="12sp"
                android:textColor="@color/gary"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>