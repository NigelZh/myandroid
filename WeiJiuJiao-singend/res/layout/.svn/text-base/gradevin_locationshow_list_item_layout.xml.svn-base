<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:weightSum="1.0" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center" >

        <ImageView
            android:id="@+id/gradevinlocationshow_list_item_iv"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@drawable/wine_default_icon"
            >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/gradevinlocationshow_list_item_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="圣乔治酒庄红葡萄酒"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4" >

                <TextView
                    android:id="@+id/tv_gradevin_locationshow_list_item_titile_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年份:"
                    android:textColor="@color/gary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_gradevin_locationshow_list_item_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_gradevin_locationshow_list_item_titile_year"
                    android:text="2007"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_gradevin_locationshow_list_item_titile_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_gradevin_locationshow_list_item_titile_year"
                    android:text="净含量:"
                    android:textColor="@color/gary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_gradevin_locationshow_list_item_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_gradevin_locationshow_list_item_titile_year"
                    android:layout_toRightOf="@id/tv_gradevin_locationshow_list_item_titile_weight"
                    android:text="750ml"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.6" >

                <TextView
                    android:id="@+id/tv_gradevin_locationshow_list_item_title_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                    
                    android:text="位置:"
                    android:textColor="@color/gary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_gradevin_locationshow_list_item_positon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_gradevin_locationshow_list_item_title_address"
                    android:text="A13D"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_gradevin_locationshow_list_item_title_seller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_gradevin_locationshow_list_item_positon"             
                    android:text="商家:"
                    android:textColor="@color/gary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_gradevin_locationshow_list_item_seller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_gradevin_locationshow_list_item_positon"
                    android:layout_toRightOf="@id/tv_gradevin_locationshow_list_item_title_seller"
                    android:text="名酒交易中心"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>