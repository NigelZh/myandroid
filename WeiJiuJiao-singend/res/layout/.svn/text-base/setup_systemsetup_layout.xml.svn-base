<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_setup_systemsetup_title_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:text="移动网络环境下载图片" />

        <CheckBox
            android:id="@+id/setUp_check"
            style="@style/CustomCheckboxDownpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:checked="true"
            android:padding="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setUp_clearCache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_setup_systemsetup_title_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:text="清除缓存" />

        <TextView
            android:id="@+id/setUp_cahceSize_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/img_btn_arrow"
            android:padding="10dp"
            android:paddingRight="30dp"
            android:text="310M" />
    </RelativeLayout>

</LinearLayout>