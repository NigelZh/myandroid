<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/et_user_login_forgot_password_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/input_bg"
            android:ems="8"
            android:hint="手机号"
            android:padding="10dp"
            android:numeric="integer"
            android:singleLine="true"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_user_login_forgot_get_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:ems="6"           
            android:singleLine="true"
            android:background="@drawable/bg_btn_verification_bg"
            android:text="获取验证码"
            android:padding="10dp"
            android:textColor="@color/dodger_Blue" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_user_login_forgot_verification_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bg"
        android:hint="手机验证码"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:numeric="integer"
        android:paddingLeft="15dp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btn_user_login_forgot_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_login_bg"
        android:padding="10dp"
        android:text="下一步"
        android:textColor="@color/white" />

</LinearLayout>