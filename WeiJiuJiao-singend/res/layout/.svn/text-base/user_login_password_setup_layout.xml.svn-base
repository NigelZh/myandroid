<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp" >

    <EditText
        android:id="@+id/ed_user_login_password_setup_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bg"
        android:hint="密码"
        android:padding="10dp"
        android:singleLine="true"
        android:password="true"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/ed_user_login_password_setup_sure_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bg"
        android:hint="确认密码"
        android:singleLine="true"
        android:password="true"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black" />

    <RelativeLayout
        android:id="@+id/rl_user_login_password_setup_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <CheckBox
            android:id="@+id/ck_user_login_password_setup_Remember_password"
            style="@style/CustomCheckboxPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_alignParentLeft="true"            
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_user_login_password_setup_Remember_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"            
            android:layout_toRightOf="@id/ck_user_login_password_setup_Remember_password"
            android:text="记住密码" />

        <TextView
            android:id="@+id/tv_user_login_password_setup_Display_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"            
            android:layout_centerVertical="true"
            android:text="显示密码" />

        <CheckBox
            android:id="@+id/ck_user_login_password_setup_Display_password"
            style="@style/CustomCheckboxPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_toLeftOf="@id/tv_user_login_password_setup_Display_password" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_user_login_password_setup_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_login_bg"
        android:padding="10dp"
        android:text="完成"
        android:textColor="@color/white" />

</LinearLayout>